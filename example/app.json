{
  "expo": {
    "name": "GoogleNav Example",
    "slug": "react-native-google-nav-example",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.googlenav.example",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs your location for turn-by-turn navigation.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs background location for navigation.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.googlenav.example",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "plugins": [
      [
        "react-native-google-nav/expo-plugin",
        {
          "androidApiKey":"YOUR_ANDROID_API_KEY",
          "iosApiKey":"YOUR_IOS_API_KEY"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for navigation."
        }
      ]
    ]
  }
}
